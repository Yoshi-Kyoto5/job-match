<div class="sinupPage">
  <header class="header">
    <div>アカウント作成</div>
  </header>
  <div class='container'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"mt-5" }) do |f| %>
      <%= devise_error_messages! %>
      <label for="file_photo" class="rounded-circle userProfileImg">
        <div class="userProfileImg_description">画像アップロード</div>
        <i class="fas fa-camera fa-3x"></i>
        <%= f.file_field :img_name, id: "file_photo" %>
      </label>
      <div class="userImgPreview" id="userImgPreview">
        <img id="thumbnail" class="userImgPreview_content" accept="image/*" src="">
        <p class="userImgPreview_text">画像アップロード完了</p>
      </div>
      <div class="form-group">
        <label>名前</label>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
      </div>
      <div class="form-group">
        <label>Eメールアドレス</label>
        <%= f.email_field :email, class: "form-control", placeholder: "emailを入力してください" ,autocomplete: "email" %>
      </div>
      <div class="form-group">
        <label>パスワード</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder:"パスワードを入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <label>確認用パスワード</label>
        <%= f.password_field :password_confirmation, class:"form-control", placeholder: "パスワードを再度入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <div><label for=''>求人者/求職者</label></div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :status, "求人者", class: "form-check-input", id: "inlineRadio1" %>
          <label class="form-check-label" for="inlineRadio1">求人者</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :status, "求職者", class: "form-check-input", id: "inlineRadio2" %>
          <label class="form-check-label" for="inlineRadio2">求職者</label>
        </div>
      </div>
      <div class="form-group">
        <label>自己紹介 or 仕事紹介</label>
        <%= text_area :user, :introduction, maxlength: "500", rows: "10", class:"form-control" %>
      </div>
      <div class="form-group">
        <label>勤務地</label>
        <%= f.text_field :work_location, class: "form-control", placeholder: "勤務地を入力してください" ,autocomplete: "work_location" %>
      </div>
      <div class="form-group">
        <label>勤務時間</label>
        <%= f.text_field :work_time, class: "form-control", placeholder: "勤務時間を入力してください" ,autocomplete: "work_time" %>
      </div>
        <label>入社希望日</label>
        <%= f.text_field :start_date, class: "form-control", placeholder: "入社希望日を入力してください" ,autocomplete: "start_date" %>
      </div>
      <div class="form-group">
        <label>入社希望日</label>
        <%= f.text_field :start_date, class: "form-control", placeholder: "入社希望日を入力してください" ,autocomplete: "start_date" %>
      </div>
      <div class="form-group">
        <label>給料</label>
        <%= f.text_field :salary, class: "form-control", placeholder: "給料を入力してください" ,autocomplete: "salary" %>
      </div>
      <div class="form-group">
        <label>新型コロナ対策</label>
        <%= text_area :user, :corona_support, maxlength: "300", rows: "10", class:"form-control" %>
      </div>
      <div class="text-center">
        <%= f.submit "新規登録", class: "btn submitBtn" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>